<div class="containert z">
  <div class="row text-center">
    <%= form_with model: @chat do |f| %>
      <%= f.text_field :message %>
      <%= f.hidden_field :room_id %>
      <%= f.submit "送信" %>
    <% end %>
    <table class="table table-hover table-invrese">
      <thead>
        <tr>
          <td>投稿者名</td>
          <td>投稿内容</td>
        </tr>
      </thead>
      <tbody>
        <% @chats.each do |chat| %>
          <tr>
            <td><%= chat.user.name %></td>
            <td><%= chat.message %></td>
            <td><%= chat.created_at.strftime("%Y-%m-%d %H:%M:%S")  %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>






