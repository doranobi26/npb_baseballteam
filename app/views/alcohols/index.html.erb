<div class="container">
  <div class="row text-center">
    <h3 class="post-index">投稿一覧</h3>
  </div>
  <div class="row">
    <table class="table table-hover table-invrese">
      <thead>
        <tr>
          <th>投稿者</th>
          <th>タイトル</th>
          <th><i class="far fa-clock"></i></th>
        </tr>
      </thead>
      <tbody>
        <% @alcohols.each do |alcohol| %>
          <tr>
            <td>
              <%=link_to user_personal_path(alcohol.user.id) do %>
                <%=attachment_image_tag alcohol.user, :profile_image, size: "50x50",format: 'jpeg', fallback: "default.jpg" %><br>
                <%= alcohol.user.name %>
              <% end %>
            </td>
            <td><%=alcohol.title %></td>
            <td><%= alcohol.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>